  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.3",
    "@types/promise.prototype.finally": "^2.0.2",
    "@types/sinon": "^5.0.1",
